<% provide(:title, "Cart") %>

<p id="notice"><%= notice %></p>
<div id="itemsContainer">
    <table id="customers"> <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        <% product = Product.find_by_id(id) %>
        <tr>
        <td> <div class="image"> <%= link_to (image_tag product.image_url, :style =>"height:40px"), item %> </div>
        </td>
        <td class="title"><%= link_to product.title, product %></td>
        <td><a href="#">Remove From Cart</a></td> <td> <a href="cart/increase/<%= product.id %>" >Increase Products<i class='fas fa-arrow-alt-circle-down'></i></a></td>
        </td>
        <td> <a href="cart/reduce/<%= product.id %>" >Reduce Products<i class='fas fa-arrow-alt-circle-down'></i></a></td> </td>
        <td class="price"><%= number_to_currency(product.price, :unit =>"€") %></td> <td class="quantity"><%= quantity %></td> <td class="price"><%= number_to_currency(quantity * product.price, :unit =>"€") %></td>
        </tr>
        <% total += quantity * product.price %>
        <% end %> <tr>Total: <%= number_to_currency(total, :unit => "€") %> </tr>
    </table>
</div>