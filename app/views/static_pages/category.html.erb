<p id="notice"><%= notice %></p>
<div id="itemsContainer">
<h1>Products in <%= params[:title] %> category</h1>
<% @Products.each do |product| %>
<div class="itemhols">
<h1><%= product.title %></h1>
<%= link_to (image_tag product.image_url, :class=>"itemholsIm"), product%>
<p><%= product.description %>
</p>
<p><%= product.price %>
<br>
<%= product.category %>
<br>
<%= product.size %>
</p>
<p>
<a href="/cart/<%= product.id %>" class="button">Add to Cart</a>
<%= link_to 'Show', product, :class =>"button", :role=>"button" %>
<% if session[:login] == 1 %>
<%= link_to 'Edit', edit_product_path(product), :class =>"button", :role=>"button" %>
<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"button", :role=>"button" %>
<% end %>
</p>
</div>
<% if @Products.length == 0 %>
<br />
<h2>There are currently no products in this category</h2>
<% end %>
<% end %>
<br>