
<p id="notice"><%= notice %></p>
<div id="itemsContainer">
  <h1>Products</h1>
  <% @products.each do |product| %>
  <div class="itemhols">
    <h1><%= product.title %></h1>
    <%= link_to (image_tag product.image_url, :class => "itemholsIm"), product %>
    <p><%= product.description %></p>
    <p>Price <%= number_to_currency(product.price, :unit => "â‚¬") %>
    <br>
    Category: <%= product.category %>
    <br>
    Size: <%= product.size %></p>
    <p>
    <%= link_to 'Show', product, :class => "button button_show", :role => "button" %>
    <% if session[:login] == 1 %>
      <%= link_to 'Edit', edit_product_path(product), :class => "button button_edit", :role => "button" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button button_destroy", :role => "button" %>
    <% end %>
    <% if user_signed_in? %>
      <a href="/cart/<%= product.id %>" class="button">Add To Cart</a>
    <% end %>
    </p>
  </div>
  <% end %>
</div>
<br>
<% if user_signed_in? %>
<% if current_user.admin? %>
<%= link_to 'New Item', new_product_path, :class =>"button", :role=>"button" %>
<%= link_to 'New Category', new_category_path, :class =>"button", :role=>"button" %>
<% end %>
<% end %>

